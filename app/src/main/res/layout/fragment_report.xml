<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zata_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Header -->
        <TextView
            android:text="Report Bee Colony"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Capture and analyze suspected rock bee colonies"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Image Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardBackgroundColor="@color/zata_surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/img_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_map"
                android:contentDescription="Colony image"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/zata_surface"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_status"
                    android:text="Awaiting image capture"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_analysis"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="12dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:progressTint="@color/zata_accent"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Capture Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_capture"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Capture Colony Image"
            android:textSize="15sp"
            android:textColor="@color/zata_background"
            app:backgroundTint="@color/zata_accent"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            android:layout_marginTop="20dp"/>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Analyze &amp; Submit"
            android:textSize="15sp"
            android:enabled="false"
            android:textColor="@color/text_primary"
            app:cornerRadius="14dp"
            app:backgroundTint="@color/zata_secondary"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
