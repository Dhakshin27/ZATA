<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020617"
    android:paddingBottom="96dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- PAGE TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bee Awareness &amp; Rock Bee Safety"
            android:textColor="#38BDF8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In recent years, bee populations have declined due to habitat loss, pesticide use, climate change, and human disturbance. Lack of awareness often leads to unnecessary destruction of bee colonies, especially wild species like rock bees. Educating people about bee behavior and ecological importance is a key step toward conservation"
            android:textColor="#F59E0B"
            android:textSize="14sp"
            android:alpha="0.85"
            android:paddingBottom="20dp" />
        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->


        <!-- IMAGE CARD: TYPES OF BEES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bee_types_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Types of Bees in India"
            android:textColor="#38BDF8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="6dp" />
        <!--            android:fontFamily="@font/playfairdisplay_variablefont_wght"-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Rock Bee (Apis dorsata) – Large, aggressive, open hives at height.\n\n• Indian Honey Bee (Apis cerana) – Domesticated, commonly used in beekeeping.\n\n• Little Bee (Apis florea) – Small-sized, low honey yield.\n\n• Stingless Bees (Trigona) – Tiny, non-stinging, medicinal honey."
            android:textColor="#F59E0B"
            android:textSize="12sp"

            android:lineSpacingExtra="5dp"
            android:paddingBottom="22dp" />
        <!--        android:fontFamily="@font/bitter_variablefont_wght"-->

        <!-- IMAGE CARD: ROCK BEE HIVE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/rock_bee_hive_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock Bees – Location Clues"
            android:textColor="#38BDF8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock bees build large exposed honeycombs at elevated locations. Always scan upward."
            android:textColor="#F59E0B"
            android:textSize="14sp"
            android:paddingBottom="6dp" />
        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Common locations:\n• Rock cliffs and hill faces\n• Under bridges and flyovers\n• Tall buildings\n• Forest trees and quarry walls"
            android:textColor="#F59E0B"
            android:textSize="12sp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="22dp" />
        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->


        <!-- IMAGE CARD: SAFETY -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bee_safety_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock Bee Behavior &amp; Safety"
            android:textColor="#38BDF8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock bees are highly defensive. Disturbance can trigger a coordinated mass attack."
            android:textColor="#F59E0B"
            android:textSize="14sp"
            android:paddingBottom="14dp" />
        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO:\n• Keep 30–50 m distance\n• Wear full-sleeve clothing\n• Use camera zoom\n• Stay calm\n\nDON’T:\n• Do not use flash\n• Do not shout or throw objects\n• Never attempt honey collection"
            android:textColor="#F59E0B"
            android:textSize="12sp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="28dp" />
        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->

        <!-- SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why Rock Bees Matter"
            android:textColor="#38BDF8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why Rock Bees Are Especially Important:"
            android:textColor="#38BDF8"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Primary pollinators of forest and wild plant species\n• Support natural regeneration of forests\n• Maintain genetic diversity by long-distance pollination\n• Cannot be domesticated or easily replaced\n• Support entire food chains indirectly\n• Act as indicators of environmental health\n• Highly vulnerable to habitat destruction and human disturbance"
            android:textColor="#F59E0B"
            android:textSize="12sp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="30dp" />

        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->


        <!--            android:fontFamily="@font/bitter_variablefont_wght"-->


    </LinearLayout>
</ScrollView>
