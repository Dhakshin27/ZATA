<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020617"
    android:paddingBottom="96dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bee Awareness &amp; Rock Bee Safety"
            android:textColor="#38BDF8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:letterSpacing="0.04"
            android:paddingBottom="12dp" />

        <!-- INTRO CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#020617">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bee populations are declining due to habitat loss, pesticide use, climate change, and human disturbance. Wild species like rock bees are often misunderstood and destroyed out of fear. Awareness and responsible observation are essential to protect these vital pollinators."
                android:textColor="#F59E0B"
                android:textSize="14sp"

                android:lineSpacingExtra="6dp"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- IMAGE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bee_types_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Types of Bees in India"
            android:textColor="#38BDF8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Rock Bee (Apis dorsata) – Large, aggressive, open hives at height\n• Indian Honey Bee (Apis cerana) – Domesticated and commonly used\n• Little Bee (Apis florea) – Small-sized with low honey yield\n• Stingless Bees (Trigona) – Non-stinging, medicinal honey"
            android:textColor="#F59E0B"
            android:textSize="13sp"

            android:lineSpacingExtra="6dp"
            android:paddingBottom="22dp" />

        <!-- IMAGE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rock_bee_hive_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- LOCATION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock Bees – Location Clues"
            android:textColor="#38BDF8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock bees build exposed honeycombs at elevated and undisturbed locations. Always observe by scanning upward."
            android:textColor="#F59E0B"
            android:textSize="14sp"

            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Rock cliffs and hill faces\n• Under bridges and flyovers\n• Tall buildings\n• Forest trees and quarry walls"
            android:textColor="#F59E0B"
            android:textSize="13sp"

            android:lineSpacingExtra="6dp"
            android:paddingBottom="22dp" />

        <!-- SAFETY IMAGE -->
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bee_safety_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- SAFETY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock Bee Behavior &amp; Safety"
            android:textColor="#38BDF8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock bees are highly defensive and respond collectively to threats."
            android:textColor="#F59E0B"
            android:textSize="14sp"

            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DO:\n• Keep 30–50 m distance\n• Wear full-sleeve clothing\n• Use camera zoom\n• Stay calm\n\nDON’T:\n• Do not use flash\n• Do not shout or throw objects\n• Never attempt honey collection"
            android:textColor="#F59E0B"
            android:textSize="13sp"

            android:lineSpacingExtra="6dp"
            android:paddingBottom="26dp" />

        <!-- IMPORTANCE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why Rock Bees Matter"
            android:textColor="#38BDF8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfairdisplay_variablefont_wght"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Primary pollinators of forest ecosystems\n• Enable natural regeneration of wild plants\n• Maintain genetic diversity through long-range pollination\n• Cannot be domesticated or replaced\n• Support entire food chains\n• Indicators of environmental health"
            android:textColor="#F59E0B"
            android:textSize="13sp"

            android:lineSpacingExtra="6dp"
            android:paddingBottom="40dp" />

    </LinearLayout>
</ScrollView>
