<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background circle -->
    <item>
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:thickness="10dp">
            <solid android:color="@color/zata_secondary"/>
        </shape>
    </item>

    <!-- Progress circle -->
    <item>
        <shape
            android:shape="ring"
            android:useLevel="true"
            android:thickness="10dp">
            <solid android:color="@color/zata_accent"/>
        </shape>
    </item>

</layer-list>
